@using EntityLayer.Concrete
@model List<LedgerMember>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<div class="wrapper">
 


  <div class="content-wrapper">
 

    <section class="content">
      <div class="card">
       
        <div class="card-body p-0">
          <table class="table table-striped projects">
              <thead>
                  <tr>
                      <th style="width: 1%">
                          #
                      </th>
                      <th style="width: 20%">
                          Ad Soyad
                      </th>
                      <th style="width: 30%">
                          Eklendiği Defter
                      </th>
                      <th>
                          Role
                      </th>
                      <th style="width: 8%" class="text-center">
                         İzin
                      </th>
                      <th style="width: 20%">
                      </th>
                  </tr>
              </thead>
              <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td>
                                        #
                                    </td>
                                    <td>
                                        <a>
                                           @item.User.FullName
                                        </a>
                                        
                                    </td>
                                    <td>
                                        @item.Ledger.Name
                                    </td>
                                    <td class="project_progress">
                                       @item.Role
                                    </td>
                                    
                                    <td class="project-actions text-right">
                                        @item.Permissions
                                        <div class="form-group">

                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" checked>
                                                <label class="form-check-label">Read</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox">
                                                <label class="form-check-label">Write</label>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="project-state">
                                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#Sil_@item.Id">
                                            Sil
                                        </button>
                                        <a href="/LedgerMember/EditMember/@item.Id" class="btn btn-danger">Düzenle</a>
                                    
                                    </td>
                                    
                                </tr>
                                <div class="modal fade" id="Sil_@item.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle">Blog Sil</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <h4>Üyeyi silmek istiyor musunuz?</h4>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-info mx-4" data-dismiss="modal">Vazgeç</button>
                                                @Html.ActionLink("Sil", "DeleteMember", new { id = @item.Id ,@item.UserId}, new { @class = "btn btn-danger mx-4" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            




              </tbody>
          </table>

        </div>
                <a href="/LedgerMember/AddMember/" class="btn btn-success">Üye Ekle</a>

      </div>

    </section>
  </div>

  

</div>

