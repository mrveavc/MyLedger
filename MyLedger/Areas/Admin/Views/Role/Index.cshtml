@model List<(EntityLayer.Concrete.AppUser user, string roleName)>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
	int i = 1;

}




<div id="wrapper">


	<div class="wrapper wrapper-content animated fadeInRight">

		<div class="row">

			<div class="col-lg-12">
				<div class="ibox ">


					<table class="table table-bordered">
						<thead>
							<tr>
								<th>#</th>
								<th>Kullanıcı</th>
								<th>Rol</th>
								<th></th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@i</td>
									<td>@item.user.FullName</td>
									<td>@item.roleName</td>
									<td><a href="/Admin/Role/EditRole/@item.user.Id" class="btn btn-xs btn-white">Düzenle</a></td>
									<td><a href="/Admin/Role/DeleteRole/@item.user.Id" class="btn btn-xs btn-white">Sil</a></td>
								</tr>
								i++;
							}
						</tbody>
					</table>

				</div>
			</div>

		</div>

	</div>



</div>


